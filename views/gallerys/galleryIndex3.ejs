<%- include('../partials/header') %>
    <link rel="stylesheet" href="/stylesheets/imageIndex.css">
</head>
<body>
    <main>
        <%- include('../partials/navigation') %>
        <div class="image_index">
            <ol>
                <img src="<%= image.ima_Original %>" alt="<%= image.alt %>">
            </ol>
        </div>
        <br>
        <div class="collection_pick">
            <form action="/collections" method="POST">
                <div class="collections">
                    <label for="search_element">Add to Collection</label> <br>
                    <% collections.forEach((collection) => { %>
                        <input type="radio" id="<%= collection.title %>" name="collection_id" value="<% collection._id %>">
                        <label for="collection"><%= collection.title %></label>
                        <% }) %>
                        <input hidden="text" id="image_id" name="image_id" value="<%= image._id %>">
                        <button class="add_btn" type="submit">Add</button>
                </div>         
        </div>
        <div class="gallery_remove">
            <form action="/gallerys/<%= image._id %>?_method=DELETE" method="POST">
                <a href="/skills">Cancel</a>
                <input type="submit" value="Delete">
            </form>
        </div>
        </main>
    </body>
    </html>
