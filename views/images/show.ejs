<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/stylesheets/navigation.css">
        <link rel="stylesheet" href="/stylesheets/gallery.css">
        <title>Document</title>
    </head>
    <body>
        <%- include('../partials/navigation') %>
        <h2>Image Seargh App</h2>
    <form action="/images/show" method="POST">
        <div>
            <label for="search_element">
                Search:
            </label>
            <input type="text" id="search_element" name="search">
            <input type="hidden" id="per_page" name="per_page" value="15">
            <input type="hidden" id="page" name="page" value="1">
        </div>
        <button type="submit">
            search
        </button>
        <div class="display_images">
            <ol>
                <% images.forEach((photo)=> { %>
                    <li>
                        <div>
                            <a href="<%= photo.id %>">
                                <img src="<%= photo.src.large %>" alt="<%= photo.alt %>">
                            </a>
                        </div>                        
                    </li> <br>
                    <% }) %>
                </ol>
            </div>
        </form>
        <form action="/images/show" method="POST">
            <div>
                <label for="show_more"></label>
                <input type="hidden" id="per_page" name="per_page" value="<%= per_page %>">
                <input type="hidden" id="search" name="search" value="<%= search %>">
                <input type="hidden" id="page" name="page" value="<%= parseInt(page) + 1 %>">
                <button type="submit">Next Page</button>
            </div>
        </form>
    </body>
    </html>