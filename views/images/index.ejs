<%- include('../partials/header') %>
</head>
<body>
    <main>
        <div>
        <%- include('../partials/navigation') %>
        <h2><%= imageId.alt %></h2>
        <img src="<%= imageId.src.original %>" alt="<%= imageId.alt %>">
        </div>
        <br>
        <div class="add_gallery">
            <% if (user){ %>
                <form action="/gallery" method="POST">
                    <label for="gallery_pick">
                        Add to Gallery
                    </label> <br>
                    <input type="hidden" id="id" name="id" value="<%= id %>">
                    <input type="hidden" id="photographer" name="photographer" value="<%= photographer %>">
                    <input type="hidden" id="pexelUrl" name="pexelUrl" value="<%= pexelUrl %>">
                    <input type="hidden" id="ima_Original" name="ima_Original" value="<%= ima_Original %>">
                    <input type="hidden" id="ima_Large2x" name="ima_Large2x" value="<%= ima_Large2x %>">
                    <input type="hidden" id="ima_Large" name="ima_Large" value="<%= ima_Large %>">
                    <input type="hidden" id="ima_Medium" name="ima_Medium" value="<%= ima_Medium %>">
                    <input type="hidden" id="alt" name="alt" value="<%= alt %>">
                    <button type="submit">
                        Add
                    </button>
                    <% }else { %>
                <% } %>
        </div>
    </main>
</body>
</html>
